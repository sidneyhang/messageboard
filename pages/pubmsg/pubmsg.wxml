<!--pages/pubmsg/pubmsg.wxml-->
<view class="navigator">
  <view class="tab {{currentTab == 1 ? 'active': ''}}" data-idx="1" bindtap='changeTab'>
    <text>文字留言</text>
    <view class='line'></view>
  </view>
  <view class="tab {{currentTab == 2 ? 'active': ''}}" data-idx="2" bindtap='changeTab'>
    <text>语音留言</text>
    <view class='line'></view>
  </view>
</view>


<view class="section" wx:if="{{currentTab == 1}}">
  <textarea bindblur="bindTextAreaBlur" style='width:100%; height: 300px; background-color: white; font-size: 15px; padding: 15px 15px;' placeholder="消耗一朵花留言，说你想说的..." />
</view>

<view class="section" style="height: 44px; margin-top: 5px; display: flex; align-items: center; justify-content: space-between; padding: 0 13px;">
  <text>设定对方查看该留言需要消耗的花</text>
  <text>900朵 ></text>
</view>