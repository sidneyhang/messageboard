/* pages/pubmsg/pubmsg.wxss */

page {
  background-color: #f7f7f9;
  font-size: 15px;
}

.section {
  background-color: white;
}

.navigator {
  height: 30px;
  display: flex;
  background-color: white;
}

.navigator .tab {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.navigator .tab text {
  font-size: 15px;
}

.navigator .tab .line {
  height: 4px;
  margin-top: 4px;
}

.navigator .active text {
  color: #e48443;
}

.navigator .active view {
  width: 60px;
  background-color: #e48443;
}

.myModal {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: #00000080;
  z-index: 1000;
}

.myModal .box {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 559rpx;
  background-color: white;
}

.myModal .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 108rpx;
  padding: 0 44rpx;
  color: #bebaba;
  border-bottom: 1px solid #eee;
}

.myModal .content {
  padding: 0 44rpx;
}

.myModal .price {
  margin-top: 35rpx;
  display: flex;
  justify-content: space-around;
}

.myModal .price view {
  width: 161rpx;
  height: 72rpx;
  background: #d8d8db;
  border-radius: 4px 4px 4px 4px;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.myModal .price .active {
  background-color: #f6b37f;
}

.myModal .custom {
  display: flex;
  justify-content: center;
}

.myModal .custom input {
  border: 1px solid #eee;
  margin-top: 58rpx;
  width: 600rpx;
  height: 94rpx;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.recorder {
  display: flex;
  height: 400rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.recorder .box {
  height: 174rpx;
  width: 174rpx;
  position: relative;
}

.recorder .box .pause {
  height: 60rpx;
  width: 43rpx;
  position: absolute;
  top: 57rpx;
  left: 65.5rpx;
}
