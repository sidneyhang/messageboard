/* pages/message/message.wxss */
page {
  background-color: #f7f7f9;
  font-size: 15px;
}

.section {
}

.navigator {
  height: 30px;
  display: flex;
  background-color: white;
}

.navigator .tab {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.navigator .tab text {
  font-size: 15px;
}

.navigator .tab .line {
  height: 4px;
  margin-top: 4px;
}

.navigator .active text {
  color: #e48443;
}

.navigator .active view {
  width: 60px;
  background-color: #e48443;
}

.item {
  padding: 0 30rpx;
  height: 144rpx;
  background-color: white;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  justify-content: space-between;
}