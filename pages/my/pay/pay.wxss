/* pages/my/pay/pay.wxss */

.section {
  height: 300rpx;
  padding: 0 31rpx;
}

.box {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.header {
  font-size: 26rpx;
}

.price-box {
  width: 207rpx;
  height: 122rpx;
  border: 2px solid #d8d8db;
  border-radius: 10rpx 10rpx 10rpx 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: #d8d8db;
}

.box .active {
  border-color: #f6b37f;
  color: #f6b37f;
}

.buds-number {
  font-weight: 400;
  font-size: 38rpx;
}

.price {
  font-size: 24rpx;
}

.custom {
}

.custom input {
  border: 1px solid #eee;
  margin-top: 30rpx;
  width: 100%;
  height: 94rpx;
}

.msg-btn {
  margin-top: 30rpx;
  background-color: #e48443;
  color: white;
}
