/* pages/userlist/userlist.wxss */

page {
  background-color: #f7f7f9;
}

.btn {
  margin-left: 10rpx;
  width: 100rpx;
  height: 54rpx;
  font-size: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  background-color: #e48443;
  color: white;
}

.item {
  height: 140rpx;
  margin-bottom: 10rpx;
  background-color: white;
  display: flex;
  padding: 0 30rpx;
  justify-content: space-between;
}

.item .avatar {
  width: 72rpx;
  height: 72rpx;
  background-color: #000;
}

.item .name {
  font-size: 26rpx;
  margin-left: 16rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.pub-msg {
  display: flex;
  align-items: center;
}

.search {
  background-color: white;
  margin-bottom: 12rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
}

input {
  background-color: #f7f7f9;
  border-radius: 50rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  width: 637rpx;
  height: 68rpx;
}

.attention {
  background-color: #9ABBF6;
}

.cancel {
  background-color: #F4F4F6;
  color: #B8B8B8;
  border: none;
}
button::after {
  border: none;
}

.show {
  display: block;
}

.hidden {
  display: none;
}